// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Card {
  id Int @id
  name String
  hiragana String
  rarity String
  jobType String
  illustrator String?
  description String?
  cost Float
  capacity Int
  yari String
  yumi String
  kiba String
  heiki String
  attack Int
  defence Int
  intelligence Int
  attackGrowth Int
  defenceGrowth Int
  intGrowth Float
  skill Skill? @relation(fields: [skillId], references:[id]) // many cards has one skill
  skillId Int?
  unitSkill UnitSkill[] // many to many
}

model Skill {
  id Int @default(autoincrement()) @id
  name String
  rarity String?
  type String
  description String?
  cards Card[]
}

model UnitSkill{
  id Int @default(autoincrement()) @id
  name String
  type String
  description String?
  cards Card[]
}
